<%= form_for @movie do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :rating %>
  <%= f.text_field :rating %><br>
  <br>
  <%= f.label :runtime %>
  <%= f.text_field :runtime %><br>
  <br>
  <%= f.label :plot %>
  <%= f.text_field :plot %><br>
  <br>
  <%= f.label :poster %>
  <%= f.text_field :poster %><br>
  <br>
  <%= f.fields_for :reviews do |r| %>
    <%= r.label :rating %>
    <%= r.number_field :rating %><br>
    <%= r.label :content %>
    <%= r.text_area :content %>
  <% end %>
  <%= f.submit %>
<% end %>